{
  "name": "nodejsapitestframework",
  "scripts": {
    "copy-features": "copyfiles -u 1 **/features/*.feature dist",
    "build": "npm install && npm run copy-features && tsc",
    "check": "cucumber-js dist/features/ --dry-run",
    "test": "npm run build && cucumber-js dist/features/",
    "filter-test": "npm run build && cucumber-js dist/features/ --tags=\"$tags\""
  },
  "dependencies": {
    "@cucumber/cucumber": "^8.10.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "cucumber": "^6.0.7",
    "supertest": "^6.3.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cucumber": "^7.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0"
  }
}
